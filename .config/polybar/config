;==Colors==================================================

[colors]

background = #00051733
background-alt = #444
foreground = #1F1F1F
foreground-alt = #fafafa
foreground-dark = #000000
primary = #0288d1
secondary = #ff6f3f
alert = #bd2c40

back1 = #1f1f1f
back2 = #2f2f2f
back3 = #464646
back4 = #5d5d5d

;=========================================================

[bar/example]

monitor = ${env:MONITOR:}
width = 100%
height = 24
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

;========================================================

font-0 = "Roboto:size=11:weight=bold;2"
font-1 = "Material Icons:size=14;4"
font-2 = Iosevka Nerd Font:style=Medium:size=16;3

;==Module location=======================================

modules-left = bspwm i3index i3 left i3msg 
modules-center = 
modules-right = right4 ssd right3 memory cpu battery temperature right2 wlan eth eth2 pulseaudioramp pulseaudio right1 hour date

tray-position = right
tray-background = ${colors.back1}
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

;==Arrows================================================

