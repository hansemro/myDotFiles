[module/wlan]

type = internal/network
interface = wlp2s0
interval = 3.0

format-connected-prefix = "  "
format-connected = <ramp-signal> <label-connected>
format-connected-background = ${colors.back2}
; label-connected = " %local_ip%  "
format-connected-suffix = "  "

format-disconnected-prefix = "  "
format-disconnected = <label-disconnected>
format-disconnected-background = ${colors.back2}
format-disconnected-suffix = "  "

; All labels support the following tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %local_ip6% [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]

; Default: %ifname% %local_ip%
label-connected = " %essid% "
label-connected-foreground = ${colors.foreground-alt}

; Default: (none)
label-disconnected = "○○○○  not connected "
label-disconnected-foreground = ${colors.foreground-alt}

; Default: (none)
;label-packetloss = %essid%
;label-packetloss-foreground = #eefafafa

; Only applies if <ramp-signal> is used
ramp-signal-0 = ○○○○
ramp-signal-1 = ●○○○
ramp-signal-2 = ●●○○
ramp-signal-3 = ●●●○
ramp-signal-4 = ●●●●
ramp-signal-foreground = ${colors.foreground-alt}

;======================================================

[module/eth]

type = internal/network
interface = enp5s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = "   "
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-prefix-background = ${colors.back2}
label-connected = " %local_ip%  "
label-connected-background = ${colors.back2}
label-connected-foreground = ${colors.back3}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;======================================================

